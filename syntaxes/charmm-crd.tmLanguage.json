{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "CHARMM CRD",
	"patterns": [
		{"include": "#titles"},
		{"include": "#crd_header"},
		{"include": "#constants"}
	],
	"repository": {
		"titles": {
			"patterns": [
				{
					"name": "markup.heading.title.charmm",
					"match": "^\\s*\\*.*$"
				}
			]
		},
		"crd_header": {
			"patterns": [
				{
					"name": "keyword.other.flag.crd.charmm",
					"match": "\\b(?i)(EXT|EXTENDED)\\b"
				}
			]
		},
		"constants": {
			"patterns": [
				{
					"name": "constant.numeric.float.charmm",
					"match": "\\b-?\\d+\\.\\d*([eEdD][+-]?\\d+)?\\b"
				},
				{
					"name": "constant.numeric.integer.charmm",
					"match": "\\b-?\\d+\\b"
				}
			]
		}
	},
	"scopeName": "source.crd.charmm"
}
